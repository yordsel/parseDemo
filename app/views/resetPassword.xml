<Alloy>
		<Window class="container" title="Reset Password">
			<View class="mainFrame" id="homeView" layout = "vertical">
				<View class="innerBox" layout="vertical" top="8%">
					<Label class="errorLabel" id="lblResetPasswordError" top="2%"></Label>
					<TextField id="tfResetPassword" hintText="Email Address" keyboardType="Titanium.UI.KEYBOARD_EMAIL" />
					<Button id="btnResetPassword" bottom="7%" onClick="fnPasswordReset">Send Email</Button>
				</View>
			</View>
		</Window>
</Alloy>