<Alloy>
		<Window id="secureHome" top="0" left="0" class="container" zIndex="2" title="Home" statusBarStyle="Titanium.UI.iPhone.StatusBar.GRAY" onClick="fnSecureHomeClicked" onClose="fnSecureHomeClose">
			<LeftNavButton platform="ios" >
				<ImageView image="./menu.png" height="24" onClick="leftNavClicked"/>
            </LeftNavButton>
			<View class="mainFrame" id="userHome" layout="vertical" >
				<Label class="mainText">Just one more thing about you and we'll get you started</Label>
				<View layout="horizontal" top="3%" height="Ti.UI.SIZE">
					<ImageView class="bigImage" id="Mom" image="mom.png" onClick="fnSetMode"></ImageView>
					<ImageView class="bigImage" id="Dad" image="dad.png" onClick="fnSetMode"></ImageView>					
				</View>
				<View layout="horizontal"  height="Ti.UI.SIZE">
					<ImageView class="bigImage" id="Guardian" image="guardian.png" onClick="fnSetMode"></ImageView>
					<ImageView class="bigImage" id="CareProv" image="careprov.png" onClick="fnSetMode"></ImageView>					
				</View>
			</View>
		</Window>
</Alloy>